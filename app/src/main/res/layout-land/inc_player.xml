<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/playerBackground"
    android:animateLayoutChanges="true"
    android:padding="@dimen/dividerBorderWidth"
    android:focusable="true"
    android:clickable="true"
    app:strokeWidth="@dimen/borderWidth"
    app:strokeColor="?attr/colorOutline"
    app:shapeAppearanceOverlay="@style/PlayerBackgroundImage">

    <!-- Artwork -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/playerImageView"
        android:contentDescription="@string/view_description_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:padding="0.12dp"
        app:srcCompat="@drawable/placeholder_album"
        app:shapeAppearanceOverlay="@style/PlayerBackgroundImage"/>

    <!-- Main container -->
    <LinearLayout
        android:id="@+id/playerContainerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingBottom="@dimen/playerMargin"
        android:paddingStart="@dimen/activityHorizontalMargin"
        android:paddingEnd="@dimen/playerMargin"
        android:clipToPadding="false"
        android:background="?attr/playerGradient">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/imageSize"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/listHorizontalMargin"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:animateLayoutChanges="true">

            <!-- Playback state -->
            <TextView
                android:id="@+id/playerStatusView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-4dp"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:text="@string/playback_state_loading"
                android:textAllCaps="true"
                android:lines="1"
                android:visibility="gone"/>

            <!-- Title -->
            <TextView
                android:id="@+id/playerTitleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:text="@string/playback_state_loading"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="false"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:duplicateParentState="true">
                <requestFocus
                    android:duplicateParentState="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
            </TextView>

            <!-- Subtitle -->
            <TextView
                android:id="@+id/playerSubtitleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:text="@string/unavailable"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="false"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:duplicateParentState="true"
                android:visibility="gone">
                <requestFocus
                    android:duplicateParentState="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
            </TextView>

        </LinearLayout>

        <!-- Toggle button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/playerToggleButton"
            android:contentDescription="@string/view_description_toggle"
            android:layout_width="@dimen/playerToggleButton"
            android:layout_height="@dimen/playerToggleButton"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_media_play"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:fabCustomSize="@dimen/playerToggleButton"
            app:useCompatPadding="true"
            app:pressedTranslationZ="0dp"/>

    </LinearLayout>

    <!--</LinearLayout>-->

</RelativeLayout>